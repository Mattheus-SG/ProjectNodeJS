<h3>Criar categoria:</h3>

{{#each erros}}

<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{else}}
{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="nome" class="mb-1">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control mb-4">
            <label for="slug" class="mb-1">Slug:</label>
            <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control mb-4">
            <button type="submit" class="btn btn-success">Criar categoria</button>
        </form>
    </div>
</div>