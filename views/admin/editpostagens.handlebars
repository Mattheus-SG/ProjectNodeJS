<h3>Editar postagem</h3>
<hr>

{{!-- Erros --}}
{{#each erros}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{else}}
{{/each}}

<div class="card mb-4">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
        <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo" class="mb-1">Titulo:</label>
            <input type="text" name="titulo" class="form-control mb-4" value="{{postagem.titulo}}">

            <label for="slug" class="mb-1">Slug:</label>
            <input type="text" name="slug" class="form-control mb-4" value="{{postagem.slug}}">

            <label for="descricao" class="mb-1">Descrição:</label>
            <textarea type="text" name="descricao" class="form-control mb-4">{{postagem.descricao}}</textarea>

            <label for="conteudo" class="mb-1">Conteudo:</label>
            <textarea type="text" name="conteudo" class="form-control mb-4">{{postagem.conteudo}}</textarea>
            <label for="categoria" class="mb-1">Categoria:</label>
            <select class="form-select" name="categoria">
                <option value="0" selected="true" disabled> Selecione </option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Editar postagem</button>
        </form>
    </div>
</div>